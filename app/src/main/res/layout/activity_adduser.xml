<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".adduser">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:background="@drawable/line"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/adduserimg"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_baseline_supervised_user_circle_24" />

                <TextView
                    android:id="@+id/addusertitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/font"
                    android:gravity="center"
                    android:text="회원가입"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nameGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/font"
                    android:gravity="center"
                    android:text="이름 :"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/NameInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:fontFamily="@font/font"
                    android:gravity="center"
                    android:hint="이름을 입력해주세요." />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/numberGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/font"
                    android:gravity="center"
                    android:text="번호 :"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/numberinput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:ems="11"
                    android:singleLine="true"
                    android:fontFamily="@font/font"
                    android:gravity="center"
                    android:hint="번호를 입력해주세요."
                    android:inputType="phone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/phonebrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/brandtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/font"
                    android:text="통신사 :"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/phone_spinner"
                    android:layout_width="150dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <Button
                android:id="@+id/check1ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:background="@drawable/button_line"
                android:fontFamily="@font/font"
                android:text="실명인증" />

            <TextView
                android:id="@+id/bankCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/font"
                android:gravity="center"
                android:text="계좌 인증"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/banknumbercheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/banktitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/font"
                    android:gravity="center"
                    android:text="계좌번호 :"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/bankBrandspinner2"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    />

                <EditText
                    android:id="@+id/banknumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="30"
                    android:fontFamily="@font/font"
                    android:gravity="center"
                    android:hint="계좌번호 입력"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/accnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/numbercheck"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="155dp"
                    android:gravity="center"
                    android:text="인증번호"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/numbercheckinput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:inputType="number"
                    android:hint="인증번호" />
            </LinearLayout>

            <Button
                android:id="@+id/adduserok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_line"
                android:text="가입" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
