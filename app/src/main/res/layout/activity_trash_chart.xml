<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".trash_chart">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/line"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/titleImg"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:srcCompat="@drawable/ic_baseline_bar_chart_24" />

        <TextView
            android:id="@+id/titleName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/font"
            android:gravity="center"
            android:text="음식물 쓰레기 배출 분석"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/bar_chart"
        android:layout_width="match_parent"
        android:layout_height="520dp" />
//tlq
    <LinearLayout
        android:id="@+id/Go"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/Go_Button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/line_top_bottom"
            android:orientation="horizontal"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">


            <LinearLayout
                android:id="@+id/Go_trash"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/line_right"
                android:gravity="center"
                android:paddingRight="4dp">

                <ImageButton
                    android:id="@+id/Go_Trash_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/ic_baseline_wifi_protected_setup_24" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/Go_chart"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="-3dp"
                android:layout_weight="1"
                android:background="@drawable/line_right"
                android:gravity="center"
                android:paddingRight="4dp">

                <ImageButton
                    android:id="@+id/Go_chart_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/ic_baseline_bar_chart_24" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Go_MyTrash"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="-3dp"
                android:layout_weight="1"
                android:background="@drawable/line_right"
                android:gravity="center"
                android:paddingRight="4dp">

                <ImageButton
                    android:id="@+id/Go_MyTrash_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/ic_baseline_auto_delete_24" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Go_setting"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="-4dp"
                android:layout_weight="1"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/Go_setting_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/ic_baseline_settings_24" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Go_button_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:gravity="center"
                android:text="배출" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:gravity="center"
                android:text="배출량 분석" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:gravity="center"
                android:text="내 쓰레기통" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="15dp"
                android:text="설정" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>