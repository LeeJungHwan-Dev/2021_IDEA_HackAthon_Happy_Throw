<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".setting">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/line"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/titleImg"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:srcCompat="@drawable/ic_baseline_settings_24" />

        <TextView
            android:id="@+id/titleName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/font"
            android:gravity="center"
            android:text="설정"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/actionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="등록 정보" />

            <LinearLayout
                android:id="@+id/info_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/infousername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/font"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:background="@drawable/line"
                    android:paddingBottom="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="이름 : " />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/info_phonenum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/infophonenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:fontFamily="@font/font"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:background="@drawable/line"
                    android:paddingBottom="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="전화번호 : " />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/info_bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/infobanknum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:fontFamily="@font/font"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:background="@drawable/line"
                    android:paddingBottom="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="계좌번호 : " />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/info_bankname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/infobankname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:fontFamily="@font/font"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:background="@drawable/line"
                    android:paddingBottom="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="은행 : " />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/ReEditbank"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_line"
            android:text="계좌 재설정"
            tools:visibility="visible" />

        <Button
            android:id="@+id/Reset"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_line"
            android:layout_marginBottom="10dp"
            android:text="초기화"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/readdbanks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">


            <TextView
                android:id="@+id/bankCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/font"
                android:gravity="center"
                android:text="계좌 인증"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/banknumbercheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/banktitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/font"
                    android:gravity="center"
                    android:text="계좌번호 :"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/bankBrandspinner2"
                    android:layout_width="150dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/banknumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="30"
                    android:fontFamily="@font/font"
                    android:gravity="center"
                    android:hint="계좌번호 입력"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/accnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/numbercheck"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="155dp"
                    android:gravity="center"
                    android:text="인증번호"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/numbercheckinput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="인증번호"
                    android:inputType="number" />
            </LinearLayout>

            <Button
                android:id="@+id/adduserok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_line"
                android:text="설정" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Go"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/Go_Button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/line_top_bottom"
            android:orientation="horizontal"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">


            <LinearLayout
                android:id="@+id/Go_trash"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/line_right"
                android:gravity="center"
                android:paddingRight="4dp">

                <ImageButton
                    android:id="@+id/Go_Trash_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/ic_baseline_wifi_protected_setup_24" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/Go_chart"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="-3dp"
                android:layout_weight="1"
                android:background="@drawable/line_right"
                android:gravity="center"
                android:paddingRight="4dp">

                <ImageButton
                    android:id="@+id/Go_chart_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/ic_baseline_bar_chart_24" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Go_MyTrash"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="-3dp"
                android:layout_weight="1"
                android:background="@drawable/line_right"
                android:gravity="center"
                android:paddingRight="4dp">

                <ImageButton
                    android:id="@+id/Go_MyTrash_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/ic_baseline_auto_delete_24" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Go_setting"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="-4dp"
                android:layout_weight="1"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/Go_setting_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/ic_baseline_settings_24" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Go_button_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:gravity="center"
                android:text="배출" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:gravity="center"
                android:text="배출량 분석" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:gravity="center"
                android:text="내 쓰레기통" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="15dp"
                android:text="설정" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>